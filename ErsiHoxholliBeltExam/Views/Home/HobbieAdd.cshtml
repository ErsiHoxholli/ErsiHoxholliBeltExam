@model Hobbie

<div class="text-center">
    <h1 class="display-4 mt-5 mb-5">Add A Hobbie</h1>    
</div>

<form action="/Hobbie/Create" method="post">    
<div class="row mt-5">
    <div class="col-sm-5">
<div class="form-group">
    <span asp-validation-for="Name"></span>
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control">
</div>

<div class="form-group">
    <span asp-validation-for="Description"></span>
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control">
</div>
</div>

<div class="col-sm-2 offset-sm-2 d-flex align-items-end">
<button type="submit" class="btn btn-primary">Post Hobbie</button>

</div>
</form>
